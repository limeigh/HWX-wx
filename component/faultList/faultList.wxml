<template name="faultList">
<block wx:if="{{showLoading}}">
    <view class="loading">玩命加载中…</view>
</block>
<block wx:else>
    <view class="fault">
        <block wx:for="{{faults}}" wx:for-index="faultIndex" wx:for-item="faultItem" wx:key="fault">
            <view data-id="{{faultItem.Id}}" class="fault-item" catchtap="addOrder">
                <image style="width: 50px; height: 50px; background-color: #ffffff;" mode="aspectFit" src="{{faultItem.imgurl}}" class="fault-cover-img"></image>
                <view class="fault-title">{{faultItem.Name}}</view>
            </view>
        </block>
    </view>
</block>
</template>