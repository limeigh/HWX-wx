
page {
  padding-bottom: 100rpx;
  background: #f5f5f5;
}

.userinfo {
  height: 304rpx;
  margin-bottom: 20rpx;
  background: #fff;
  text-align: center;
}

.userhead {
  width: 130rpx;
  height: 130rpx;  
  margin: 0 auto;
  padding-top: 40rpx;
  overflow: hidden;
}

.head-img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.username {
  margin: 25rpx 0 15rpx 0;
  color: #333;
  font-size: 32rpx;
  line-height: 32rpx;
}

.usertips {
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
}

.caozuo {
  background: #fff;
}

.caozuo-inner {
  height: 101rpx;
}

.icon {
  float: left;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
}

.icon-img {
  width: 33rpx;
  height: 38rpx;
  margin-top: 31rpx;
}

.lianxi {
  float: left;
  width: 650rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #e8e8e8;
  line-height: 100rpx;
}

.caozuo-inner:last-child .lianxi {
  border: none;
}

.botinfo {
  width: 100%;
  height: 99rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
}

.column {
  flex: 1;
  height: 99rpx;
  text-align: center;
}

.column-img {
  width: 54rpx;
  height: 54rpx;
  margin: 11rpx auto 0;
}

.column-con{    
    height: 34rpx;
    line-height: 20rpx;
    font-size: 20rpx;
    color: #7f8389;
}

.column-wode{
    color: #ff5000;
}
