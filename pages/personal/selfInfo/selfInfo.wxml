<view class="gerenxinxi">
  <view class="xinxi">
    <view class="line">
      <view class="left">名字</view>
      <input class="inp"  catchblur="inputName" value="{{name}}" placeholder-style="color:#333;"/>
    </view>
    <view class="line">
      <view class="left">生日</view>
      <picker class="txt" mode="date" value="{{birthday}}" start="1900-09-01" end="2100-09-01" bindchange="inputBirthday" style="background: url(../../../../img/17020404.png) no-repeat right center;background-size: 20rpx 20rpx;">
            <view class="picker">
              {{birthday}}
            </view>
      </picker>
    </view>
    <view class="line">
      <view class="left" >电话</view>
      <view class="txt1">{{phone}}</view>
    </view>
  </view>
</view>
<view class="btnexit" bindtap="logout">退出登陆</view>
