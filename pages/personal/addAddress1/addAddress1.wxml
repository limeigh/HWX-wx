<view class="weapp-about">
    <input class="input-name" placeholder="姓名" bindinput="inputName" auto-focus/>
    <radio-group class="radio-group" bindchange="selectGender">
        <radio value="1" checked="{{gender==1}}"/>男
        <radio value="2" checked="{{gender==2}}"/>女
    </radio-group>
    <button class="select-map" bindtap="selectMap">{{address}}</button>
    <input class="input-address" placeholder="详细地址" bindinput="inputAddress" value="{{addressDetail}}"/>
    <button class="submit" bindtap="submit">提交地址</button>
</view>
