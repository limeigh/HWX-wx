page {
  background: #f5f5f5;
}

.tianxiedizhi {
  padding: 0 30rpx;
  margin-bottom: 50rpx;
  background: #fff;
  font-size: 30rpx;
  color: #333;
}

.row {
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}

.row:last-child {
  border-bottom: none;
}

.left {
  flex: 1;
  line-height: 100rpx;
}

.right {
  flex: 5;
}

.name {
  padding-top: 25rpx;
  height: 75rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.sex {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}

.radio {
  width: 38rpx;
  height: 38rpx;
  position: relative;
  margin-top: 31rpx;
  margin-right: 18rpx;
  background: url("../img/170204012.png") no-repeat center center;
  background-size: contain;
  cursor: pointer;
  border-radius: 50%;
  outline: none;
}

.radio.checked {
  background: url("../img/170204013.png") no-repeat center center;
  background-size: contain;
}

.ml {
  margin-left: 60rpx;
}

.address {
  height: 100rpx;
  line-height: 100rpx;
  background: url("../img/17020404.png") no-repeat right center;
  background-size: 20rpx 20rpx;
}

.detail-address-box {
  position: relative;
}

.detail-address {
  padding: 36rpx 0;
  max-height: 70rpx;
  line-height: 35rpx;
}

.address-tips {
  position: absolute;
  bottom: -50rpx;
  left: 20%;
  padding: 0 21rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 4rpx;
  color: #fff;
  background: #555;
  z-index: 5;
  text-align: center;
}

.address-tips-arr {
  position: absolute;
  top: -9rpx;
  left: 50%;
  margin-left: -10rpx;
  width: 20rpx;
  height: 10rpx;
  background: url("../img/170204014.png") no-repeat 0 0;
  background-size: contain;
  z-index: 5;
}

.btnsure {
  width: 690rpx;
  height: 90rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: #ff5000;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
}

.full {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 8;
  background: url("../img/17020415.png");
}

.tanchuang {
  width: 560rpx;
  height: 290rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -280rpx;
  margin-top: -145rpx;
  border-radius: 8rpx;
  z-index: 9;
  background: #fff;
  overflow: hidden;
}

.tanchuang .tips {
  height: 190rpx;
  text-align: center;
}

.tanchuang .tips1 {
  padding: 58rpx 0 33rpx 0;
  line-height: 36rpx;
  font-size: 36rpx;
  color: #000;
}

.tanchuang .tips2 {
  color: #999;
  font-size: 30rpx;
  line-height: 30rpx;
}

.tanchuang .btns {
  border-top: 1rpx solid #d2d3d5;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}

.tanchuang .phone {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #d2d3d5;
  color: #000;
}

.tanchuang .dizhi {
  flex: 1;
  text-align: center;
  color: #ff5000;
}
