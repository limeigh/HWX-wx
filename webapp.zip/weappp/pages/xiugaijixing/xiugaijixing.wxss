page {
  background: #fff;
}

.wodeshebei {
  height: 62rpx;
  margin-bottom: 20rpx;
  background: #ffedc3 url("../img/17020413.png") no-repeat 718rpx center;
  line-height: 62rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  background-size: 11rpx 20rpx;
}

.content {
  display: flex;
  border-top: 1rpx solid #e8e8e8;
  background: #fff;
}

.sidebar {
  width: 179rpx;
  min-width: 179rpx;
  max-width: 179rpx;
  height: auto;
  flex-grow: 0;
  border-right: 1px solid #e8e8e8;
  background: #f9f9f9;
}

.menu {
  width: 180rpx;
  border-bottom: 1rpx solid #e8e8e8;
  height: 90rpx;
  text-align: center;
}

.menu.on {
  width: 180rpx;
  background: #fff;
}

.menu .txt {
  display: block;
  width: 175rpx;
  height: 90rpx;
  border-left: 4rpx solid #f9f9f9;
  line-height: 90rpx;
  text-align: center;
  font-size: 38rpx;
  color: #333;
  position: relative;
}

.menu.on .txt {
  border-left-color: #ff5000;
}

.menu.on .yuan {
  display: inline-block;
  position: absolute;
  margin-left: 8rpx;
  top: 25rpx;
  width: 14rpx;
  height: 14rpx;
  background: url("../img/170204019.png") no-repeat 0 0;
  background-size: cover;
}

.tabs {
  margin: 30rpx auto 30rpx;
  width: 510rpx;
  height: 58rpx;
  display: flex;
  background: url("../img/170204020.png") no-repeat 0 0;
  background-size: contain;
  overflow: hidden;
}

.nav {
  width: 255rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 28rpx;
  float: left;
  color: #666;
  position: relative;
  margin: 0;
  padding: 0;
}

.nav.on {
  color: #fff;
  background: url("../img/170204021.png") no-repeat 0 0;
  background-size: contain;
}

.right {
  flex-grow: 2;
}

.list {
  width: 570rpx;
  clear: both;
}

.item {
  border-right: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
  width: 284rpx;
  height: 275rpx;
  padding-top: 40rpx;
  text-align: center;
  float: left;
}

.item:nth-child(2n) {
  width: 283rpx;
  float: right;
}

.item .img {
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin: 0 auto;
  overflow: hidden;
}

.item .con {
  margin-top: 32rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  color: #000;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
